<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:Golf.Controls"
             xmlns:viewModels="clr-namespace:Golf.ViewModel.Match"
             xmlns:plugins="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
             x:Class="Golf.Views.CreateMatchView.CreateMatchPage"
             Title="Create Match"
             BackgroundColor="{StaticResource AppBackgroundColor}">

    <ContentPage.BindingContext>
        <viewModels:CreateMatchPageViewModel/>
    </ContentPage.BindingContext>
    
    <ContentPage.Content>
       
        <StackLayout >

            <ScrollView HorizontalOptions="FillAndExpand"
                        VerticalOptions="FillAndExpand">
                <StackLayout>
                <controls:ExtendedEntry Style="{StaticResource EntryStyleGray}"
                                        Placeholder="Enter The Match Name"
                                        FontSize="{StaticResource FontSize18}"
                                        Text="{Binding MatchNameText}"
                                        Margin="20,10,20,0"
                                        />
            <!--<Label Text="Match Type"
                   TextColor="{StaticResource BlackColor}"
                   Margin="20,5,20,0"
                   FontAttributes="Bold"
                   FontSize="{StaticResource FontSize18}"/>
            <StackLayout Orientation="Horizontal"
                         Margin="20,5,20,0"
                         HorizontalOptions="CenterAndExpand">
                <controls:CustomRadioButton Text="Teams" 
                                            TextColor="{StaticResource TextGrayColor}"
                                            FontSize="{StaticResource FontSize16}"/>

                <controls:CustomRadioButton Text="Player" 
                                            Margin="30,0"
                                            TextColor="{StaticResource TextGrayColor}"
                                            FontSize="{StaticResource FontSize16}"/>
            </StackLayout>-->

            <controls:CustomPicker  ItemsSource="{Binding CompetitionTypeItems}"
                                    Title="Select Competition Type"
                                    Image="down_arrow_gray.png"
                                    Margin="20,5,20,0"
                                    VerticalOptions="Center"
                                    ItemDisplayBinding="{Binding competitionName}" 
                                    SelectedIndex="{Binding competitionTypeId}" 
                                    SelectedIndexChanged="CustomPicker_SelectedIndexChanged"
                                    FontSize="{StaticResource FontSize18}"
                                    TitleColor="{StaticResource TextGrayColor}"
                                    TextColor="{StaticResource TextGrayColor}"/>

                    <StackLayout  IsVisible="{Binding RulesIsVisible}">
                        <StackLayout Margin="20,5,20,0"
                                 Orientation="Horizontal"
                                 Spacing="0"
                                 Padding="0">
                            <Label Text="Rule :"
                           TextColor="{StaticResource BlackColor}"
                           FontAttributes="Bold"
                           VerticalOptions="Center"
                           HorizontalOptions="FillAndExpand"
                           FontSize="{StaticResource FontSize18}"/>
                            <ImageButton Source="add_rule.png"
                                     HeightRequest="45"
                                     WidthRequest="45"
                                     Aspect="AspectFit"
                                     Padding="0"
                                     Margin="0"
                                     Command="{Binding AddRuleCommand}"
                                     BackgroundColor="Transparent"
                                     HorizontalOptions="End"
                                     VerticalOptions="Center"/>
                        </StackLayout>

                        <plugins:PancakeView BackgroundColor="{StaticResource WhiteColor}"
                                         BorderColor="{StaticResource BorderColor}"
                                         CornerRadius="10"
                                         HasShadow="True"
                                         Margin="20,5,20,0"
                                        >
                            <controls:HorizontalList ListOrientation="Vertical"
                                                 HeightRequest="200"
                                                 Padding="0"
                                                 Margin="0"
                                                 BackgroundColor="Transparent"
                                                 ItemsSource="{Binding RulesItems}">
                                <controls:HorizontalList.ItemTemplate>
                                    <DataTemplate>

                                        <StackLayout Orientation="Horizontal"
                                                     Margin="10,10,10,5"
                                                     Padding="0"
                                                     Spacing="0">

                                            <CheckBox Color="{StaticResource TextGrayColor}"
                                                  Margin="20,0"
                                                  CheckedChanged="CheckBox_CheckedChanged"/>
                                            <Label Text="{Binding ruleName}"
                                               FontSize="Small"
                                               TextColor="{StaticResource TextGrayColor}"
                                               Margin="0,0"/>
                                        </StackLayout>
                                    </DataTemplate>
                                </controls:HorizontalList.ItemTemplate>
                            </controls:HorizontalList>
                        </plugins:PancakeView>
                    </StackLayout>
                    
                    <StackLayout IsVisible="{Binding AddRuleIsVisible}">
                        <Label Text="Add a New Rule :"
                               TextColor="{StaticResource BlackColor}"
                               FontAttributes="Bold"
                               VerticalOptions="Center"
                               Margin="20,5,20,0"
                               HorizontalOptions="FillAndExpand"
                               FontSize="{StaticResource FontSize18}"/>
                       
                            <StackLayout Orientation="Horizontal">
                                <controls:CustomEntry IsCurvedCornersEnabled="True"
                                                      CornerRadius="10"
                                                      Margin="20,0,0,0"
                                                      Placeholder="Enter New Rule"
                                                      Text="{Binding AddRuleText,Mode=TwoWay}"
                                                      Style="{StaticResource RectangleShapeEntryStyle}"/>

                                <ImageButton Source="add_icon.png"
                                     HeightRequest="45"
                                     WidthRequest="45"
                                     Aspect="AspectFit"
                                     Padding="0"
                                     Margin="5,0,0,0"
                                     BackgroundColor="Transparent"
                                     HorizontalOptions="End"
                                     VerticalOptions="Center"
                                     Command="{Binding AddRuleButtonCommand}"/>

                                <ImageButton Source="cancel_icon.png"
                                     HeightRequest="45"
                                     WidthRequest="45"
                                     Aspect="AspectFit"
                                     Padding="0"
                                     Margin="5,0,5,0"
                                     BackgroundColor="Transparent"
                                     HorizontalOptions="End"
                                     VerticalOptions="Center"
                                     Command="{Binding CancelAddRuleCommand}"/>
                            </StackLayout>
                    </StackLayout>

            <Label Text="Choose Date and Time :"
                   TextColor="{StaticResource BlackColor}"
                   Margin="20,5,20,0"
                   FontSize="{StaticResource FontSize18}"
                   FontAttributes="Bold"/>

            <StackLayout Orientation="Horizontal"
                         Margin="20,5,20,0"
                         HorizontalOptions="FillAndExpand">
                <controls:NullableDatePicker PlaceHolder="Start Date"
                                             Format="yyyy/MM/dd"
                                             NullableDate="{Binding NullableStartDate}"
                                             TextColor="{StaticResource TextGrayColor}"
                                             HorizontalOptions="FillAndExpand"
                                             FontSize="{StaticResource FontSize18}"
                                             Date="{Binding MatchStartDate}"/>

                        <TimePicker       TextColor="{StaticResource TextGrayColor}"
                                          HorizontalOptions="FillAndExpand"
                                          Format="hh:mm tt"
                                          FontSize="{StaticResource FontSize18}"
                                          Time="{Binding MatchEndTime}"/>
                    </StackLayout>

            <StackLayout Orientation="Horizontal"
                         Margin="20,5,20,0"
                         HorizontalOptions="FillAndExpand">
                <controls:NullableDatePicker PlaceHolder="End Date"
                                             Format="yyyy/MM/dd"
                                             NullableDate="{Binding NullableENdDate}"
                                             Date="{Binding MatchEndDate}"
                                             TextColor="{StaticResource TextGrayColor}"
                                             HorizontalOptions="FillAndExpand"
                                             FontSize="{StaticResource FontSize18}"/>

                        <TimePicker       TextColor="{StaticResource TextGrayColor}"
                                          HorizontalOptions="FillAndExpand"
                                          Time="{Binding MatchStartTime}"
                                           Format="hh:mm tt"
                                          FontSize="{StaticResource FontSize18}"/>
                    </StackLayout>

            <!--<controls:CustomPicker Title="Choose Location" 
                                       Image="down_arrow.png"
                                       Margin="20,5,20,0"
                                    FontSize="{StaticResource FontSize18}"
                                       TitleColor="{StaticResource TextGrayColor}"
                                       TextColor="{StaticResource TextGrayColor}"/>-->

                    <Label Text="Match Fee : "
                   FontSize="{StaticResource FontSize18}"
                   TextColor="{StaticResource BlackColor}"
                   FontAttributes="Bold"
                   Margin="20,5,20,0"/>

            <controls:CustomEntry IsCurvedCornersEnabled="True"
                                  CornerRadius="25"
                                  Keyboard="Numeric"
                                  Margin="20,5,20,0"
                                  ImageAlignment="Right"
                                  Image="dollar.png"
                                  ImageHeight="40"
                                  Text="{Binding MatchFee}"
                                  Style="{StaticResource RectangleShapeEntryStyle}"/>

           
                </StackLayout>
            </ScrollView>

            <controls:RoundedButton Text="Proceed"
                                    Margin="40,0,40,10"
                                    Command="{Binding ProceedCommand}"
                                    VerticalOptions="EndAndExpand"/>
        </StackLayout>
            
       
    </ContentPage.Content>
</ContentPage>