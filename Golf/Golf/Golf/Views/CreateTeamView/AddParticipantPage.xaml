<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:plugins="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
             xmlns:Controls="clr-namespace:Golf.Controls"
             xmlns:viewModels="clr-namespace:Golf.ViewModel"
             xmlns:Converters="clr-namespace:Golf.Converters"
             x:Class="Golf.Views.AddParticipantPage"
             BackgroundColor="{StaticResource AppBackgroundColor}"
             Title="Participants Listing">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Converters:ToggledConverter x:Key="toggledConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.BindingContext>
        <viewModels:AddParticipantPageViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout>

           
            
            <plugins:PancakeView BackgroundColor="{StaticResource WhiteColor}"
                                 BorderColor="{StaticResource BorderColor}"
                                 CornerRadius="25"
                                 HasShadow="True"
                                 Margin="20,20,20,0">
                <Controls:CustomSearchBar Placeholder="Search Participants..."
                                      Margin="0"
                                      CornerRadius="25"
                                      CancelButtonColor="{StaticResource LightGreenColor}"
                                      PlaceholderColor="{StaticResource TextGrayColor}"
                                      TextColor="{StaticResource BlackColor}"
                                      HorizontalTextAlignment="Center"
                                      FontSize="{StaticResource FontSize20}"
                                      FontAttributes="Italic" 
                                      BackgroundColor="{StaticResource WhiteColor}"
                                     />
            </plugins:PancakeView>

                <Grid Margin="20,10,20,10">
                    <Grid.RowDefinitions >
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions >
                        <ColumnDefinition Width="5.0*"/>
                        <ColumnDefinition Width="5.0*"/>
                    </Grid.ColumnDefinitions>
                
            <Label Text="Team Name"
                   TextColor="{StaticResource BlackColor}"
                   FontSize="{StaticResource FontSize28}"
                   FontAttributes="Bold"
                   VerticalOptions="Center"
                   Margin="0"
                   Grid.Row="0"
                   Grid.Column="0"
                   HorizontalOptions="FillAndExpand"/>

            <Controls:RoundedButton Text="Add Participants"
                                    Margin="0"
                                    Grid.Row="0"
                                    CornerRadius="10"
                                    VerticalOptions="Center"
                                    Grid.Column="1"
                                    FontSize="Medium"
                                    HorizontalOptions="FillAndExpand"
                                    Command="{Binding AddParticipantsCommand}"
                                    Padding="5,5"/>
                </Grid>

            <ListView Margin="20,0,20,0"
                      x:Name="ListView"
                      SeparatorVisibility="None"
                      HasUnevenRows="True"
                      CachingStrategy="RecycleElement"
                      SelectionMode="None"
                      VerticalScrollBarVisibility="Never"
                      ItemsSource="{Binding PlayersList}">

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Controls:UpdateViewCell SelectedBackgroundColor="#fdcf0f">
                            <ContentView Padding="5" >
                                <plugins:PancakeView BackgroundColor="{StaticResource WhiteColor}"
                                                     CornerRadius="10"
                                                     HasShadow="False"
                                                     BorderColor="{StaticResource LightGrayColor}"
                                                     Padding="10">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="4.0*"/>
                                            <ColumnDefinition Width="2.0*"/>
                                            <ColumnDefinition Width="2.0*"/>
                                            <ColumnDefinition Width="2.0*"/>
                                        </Grid.ColumnDefinitions>

                                        <CheckBox Grid.Row="0" 
                                                  Grid.Column="0"
                                                  IsChecked="{Binding IsChecked}"
                                                  Color="{StaticResource TextGrayColor}"
                                                  CheckedChanged="CheckBox_CheckedChanged"/>

                                        <Label  Grid.Row="0"
                                                Grid.Column="1"
                                                x:Name="firstNameLabel"
                                                Text="{Binding firstName}"
                                                TextColor="{StaticResource BlackColor}"
                                                VerticalOptions="Center"/>
                                        
                                        <Label  Grid.Row="0"
                                                Grid.Column="2"
                                                Text="5"
                                                TextColor="{StaticResource BlackColor}"
                                                VerticalOptions="Center"/>

                                        <Label  Grid.Row="0"
                                                Grid.Column="3"
                                                Text="P"
                                                TextColor="{StaticResource BlackColor}"
                                                VerticalOptions="Center"/>

                                        <Switch OnColor="{StaticResource LightGrayColor}"
                                                Grid.Row="0"
                                                Grid.Column="4"
                                                x:Name="ScoreKeeperSwitch"
                                                Toggled="Switch_Toggled"
                                                IsToggled="{Binding Path=IsToggled}"
                                                ThumbColor="{StaticResource LightGreenColor}" >
                                        </Switch>
                                    </Grid>
                                </plugins:PancakeView>
                            </ContentView>
                        </Controls:UpdateViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>

            </ListView>

            <StackLayout Orientation="Horizontal" 
                         VerticalOptions="End" 
                         Margin="20,10,20,10">
                <Controls:RoundedButton Text="Preview Team"
                                        Command="{Binding TeamPreviewCommand}"/>

                <Controls:RoundedButton Text="Create Team"
                                        Margin="10,0"
                                        BindingContext="{Binding CreateTeamButtonCommand}"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>