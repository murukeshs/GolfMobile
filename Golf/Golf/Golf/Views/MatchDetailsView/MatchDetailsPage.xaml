            <!--Teams List View Initially it set to be false-->
            <ListView Margin="20,10,20,0"
                      x:Name="TeamListView"
                      ItemsSource="{Binding MatchTeamsItems}"
                      SeparatorVisibility="None"
                      HasUnevenRows="True"
                      VerticalScrollBarVisibility="Never"
                      IsVisible="{Binding IsVisibleTeamsDetails}"
                      HorizontalOptions="FillAndExpand"
                      VerticalOptions="FillAndExpand"
                      CachingStrategy="RecycleElement"
                      ItemTapped="TeamListView_ItemTapped">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <controls:UpdateViewCell SelectedBackgroundColor="#ffffff">
                            <ContentView Padding="5" >
                                <StackLayout>
                                    <plugins:PancakeView BackgroundColor="{StaticResource WhiteColor}"
                                                     CornerRadius="10"
                                                     BorderColor="{StaticResource BorderColor}"
                                                     HasShadow="True">
                                        <StackLayout Orientation="Horizontal"
                                                 Margin="10,5,10,5"
                                                 Padding="0"
                                                 Spacing="0">
                                            <controls:CircleImage Source="profile_defalut_pic.png"
                                                      VerticalOptions="Center"
                                                      WidthRequest="80"
                                                      HeightRequest="80"/>

                                            <StackLayout HorizontalOptions="FillAndExpand"
                                                     Margin="10,10,10,10">
                                                <Label FontSize="{StaticResource FontSize18}"
                                               FontAttributes="Bold"
                                               TextColor="{StaticResource TextGrayColor}"
                                               Text="{Binding MatchTeamName}"
                                               />
                                                <Label FontSize="{StaticResource FontSize18}"
                                                   TextColor="{StaticResource TextGrayColor}"
                                                   Text="{Binding Path = MatchCreaedBy ,StringFormat= 'Creaed By : {0:D}'}"/>
                                                <Label Text="{Binding Path = MatchNoofPlayers  ,StringFormat= 'No of Players : {0:D}'}"
                                                   Margin="0"
                                                   VerticalOptions="Center"
                                                   FontSize="{StaticResource FontSize14}"/>
                                            </StackLayout>

                                            <ImageButton HorizontalOptions="End"
                                                     Margin="0,10"
                                                         Aspect="AspectFit"
                                                     BackgroundColor="Transparent"
                                                     Source="arrow_down.png"
                                                     HeightRequest="30"
                                                     WidthRequest="30"/>
                                        </StackLayout>
                                    </plugins:PancakeView>

                                    <StackLayout IsVisible="{Binding IsVisible,Mode=TwoWay}">
                                    <controls:HorizontalList ListOrientation="Vertical" 
                                                             ItemsSource="{Binding Items}" 
                                                             Padding="0"
                                                             BackgroundColor="Transparent"
                                                             Margin="20,10,20,10"
                                                             >
                                        <controls:HorizontalList.ItemTemplate>
                                            <DataTemplate>
                                                    <plugins:PancakeView BackgroundColor="{StaticResource WhiteColor}"
                                                     CornerRadius="10"
                                                     BorderColor="{StaticResource BorderColor}"
                                                     HasShadow="True"
                                                     Margin="5">
                                                        <StackLayout Orientation="Horizontal"
                                                 Margin="10,10"
                                                 Padding="0"
                                                 Spacing="0">
                                                            <controls:CircleImage Source="{Binding Profile}"
                                                      VerticalOptions="Center"
                                                      WidthRequest="80"
                                                      HeightRequest="80"/>

                                                            <StackLayout HorizontalOptions="FillAndExpand"
                                                     Margin="10,5,0,5">
                                                                <Label FontSize="{StaticResource FontSize18}"
                                               FontAttributes="Bold"
                                               TextColor="{StaticResource TextGrayColor}"
                                               Text="{Binding Name}"
                                               />
                                                                <Label FontSize="{StaticResource FontSize18}"
                                                   TextColor="{StaticResource TextGrayColor}"
                                                   Text="{Binding Path = Id ,StringFormat= 'ID : {0:D}'}"/>

                                                                <Grid HorizontalOptions="FillAndExpand">
                                                                    <Grid.RowDefinitions>
                                                                        <RowDefinition Height="*"/>
                                                                    </Grid.RowDefinitions>
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="*"/>
                                                                        <ColumnDefinition Width="Auto"/>

                                                                    </Grid.ColumnDefinitions>

                                                                    <StackLayout Orientation="Horizontal"
                                                             Padding="0"
                                                             Margin="0"
                                                             Spacing="0"
                                                             Grid.Row="0"
                                                             HorizontalOptions="StartAndExpand"
                                                             Grid.Column="0">
                                                                        <Label Text="Invitation Approved:"
                                                       Margin="0"
                                                       VerticalOptions="Center"
                                                       FontSize="{StaticResource FontSize12}"/>

                                                                        <Image Source="{Binding LinkApproved , Converter={StaticResource LinkApprovedConverter}}"
                                                       HeightRequest="25"
                                                       WidthRequest="25"
                                                       VerticalOptions="Center"
                                                       Margin="5,0,0,0"
                                                       Aspect="AspectFit"/>
                                                                    </StackLayout>

                                                                    <StackLayout Orientation="Horizontal"
                                                             Padding="0"
                                                             Margin="0"
                                                             Spacing="0"
                                                             Grid.Row="0"
                                                             HorizontalOptions="End"
                                                             Grid.Column="1">
                                                                        <Label Text="Fee:"
                                                           Grid.Row="0"
                                                           Grid.Column="2"
                                                           Margin="0"
                                                           VerticalOptions="Center"
                                                           FontSize="{StaticResource FontSize12}"/>

                                                                        <Image Source="{Binding PaymentSuccess , Converter={StaticResource PaymentConverter}}"
                                                           HeightRequest="25"
                                                           WidthRequest="25"
                                                           VerticalOptions="Center"
                                                           Margin="5,0,0,0"
                                                           Aspect="AspectFit"/>
                                                                    </StackLayout>
                                                                </Grid>
                                                            </StackLayout>
                                                        </StackLayout>
                                                    </plugins:PancakeView>
                                                </DataTemplate>
                                        </controls:HorizontalList.ItemTemplate>
                                    </controls:HorizontalList>
                                </StackLayout>
                                </StackLayout>
                            </ContentView>
                        </controls:UpdateViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <StackLayout Orientation="Horizontal"
                         Margin="10"
                         HorizontalOptions="FillAndExpand"
                         VerticalOptions="EndAndExpand">

                <controls:RoundedButton Margin="0"
                                        Text="Save"
                                        HeightRequest="45"
                                        Command="{Binding SaveButtonCommand}"/>

                <controls:RoundedButton Margin="10,0"
                                        Text="Save and Notify"
                                        HeightRequest="45"
                                        Command="{Binding SaveAndNotifyButtonCommand}"/>

            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>