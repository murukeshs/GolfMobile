<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:Golf.Controls"
             xmlns:plugins="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
             x:Class="Golf.Views.MatchDetailsView.MatchDetailsPage"
             BackgroundColor="{StaticResource AppBackgroundColor}"
             Title="Match Details"
             xmlns:viewModels="clr-namespace:Golf.ViewModel.Match"
             xmlns:Converters="clr-namespace:Golf.Converters">

    <ContentPage.BindingContext>
        <viewModels:MatchDetailsPageViewModel/>
    </ContentPage.BindingContext>

    <ContentPage.Resources>
        <ResourceDictionary>

            <Converters:PaymentImageConverter x:Key="PaymentConverter" />
            <Converters:LinkApprovedImageConverter x:Key="LinkApprovedConverter" />

            <Converters:TeamProfileConverter x:Key="ProfileImageConverter" />

            <Style x:Key="HeadingsLabel" TargetType="Label">
                <Setter Property="HorizontalOptions" Value="FillAndExpand"/>
                <Setter Property="Margin" Value="0,5,0,0"/>
                <Setter Property="TextColor" Value="{StaticResource TextGrayColor}"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <StackLayout HorizontalOptions="FillAndExpand"
                     VerticalOptions="FillAndExpand">
            <Grid Margin="10"
                  HorizontalOptions="FillAndExpand"
                  VerticalOptions="StartAndExpand">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5.0*"/>
                    <ColumnDefinition Width="5.0*"/>
                </Grid.ColumnDefinitions>

                <controls:RoundedButton Margin="0"
                                        Text="Match Details"
                                        Grid.Row="0"
                                        x:Name="MatchDetailsButton"
                                        Grid.Column="0"
                                        FontSize="Medium"
                                        HeightRequest="45"
                                        BackgroundColor="{Binding MatchDetailsBackground}"
                                        BorderColor="{Binding MatchDetailsBorder}"
                                        Command="{Binding MatchDetailsCommand}"
                                        TextColor="{Binding MatchDetailsBorder}"/>


                <!--<controls:RoundedButton Margin="10,0"
                                        Command="{Binding PlayersCommand}"
                                        Text="Players"
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        FontSize="Medium"
                                        HeightRequest="45"
                                        BackgroundColor="{StaticResource WhiteColor}"
                                        BorderColor="{StaticResource LightGreenColor}"
                                        TextColor="{StaticResource LightGreenColor}"/>-->

                <controls:RoundedButton Margin="10,0"
                                        Text="Teams"
                                        Grid.Row="0"
                                        x:Name="TeamsButton"
                                        Grid.Column="1"
                                        FontSize="Medium"
                                        HeightRequest="45"
                                        BackgroundColor="{Binding TeamListBackground}"
                                        BorderColor="{Binding TeamListBorder}"
                                        TextColor="{Binding TeamListBorder}"
                                        Command="{Binding TeamCommand}"
                                        />


            </Grid>

            <BoxView HeightRequest="1"
                     HorizontalOptions="FillAndExpand"
                     Margin="20,0,20,0"
                     Color="{StaticResource LightGreenColor}"/>

            <StackLayout x:Name="MatchDetailsStackLayout"
                         Margin="20,10,20,0"
                         IsVisible="{Binding IsVisibleMatchDetails}"
                         HorizontalOptions="FillAndExpand"
                         VerticalOptions="CenterAndExpand">
                <ScrollView>
                    <StackLayout>
                        <Label Text="Match Name"
                               Style="{StaticResource HeadingsLabel}"
                               FontSize="{StaticResource FontSize18}"/>

                        <controls:CustomEntry Text="{Binding MatchName,Mode=TwoWay}"
                                              Style="{StaticResource RectangleShapeEntryStyle}"
                                              FontSize="{StaticResource FontSize18}"
                                              Margin="0,5,0,0"
                                               IsEnabled="False"
                                               BackgroundColor="LightGray"/>

                        <Label Text="Match Code"
                               Style="{StaticResource HeadingsLabel}"
                               FontSize="{StaticResource FontSize18}"/>

                        <controls:CustomEntry Text="{Binding MatchCode,Mode=TwoWay}"
                                              Style="{StaticResource RectangleShapeEntryStyle}"
                                              Margin="0,5,0,0"
                                               IsEnabled="False"
                                               BackgroundColor="LightGray"
                                              FontSize="{StaticResource FontSize18}"/>

                        <Label Text="Competition Type" 
                        Style="{StaticResource HeadingsLabel}"
                               FontSize="{StaticResource FontSize18}"/>

                        <controls:BoxPicker ItemsSource="{Binding CompetitionTypeItems}"
                                    Title="Select Competition Type"
                                    Image="down_arrow_gray.png"
                                    Margin="0,5,0,0"
                                    VerticalOptions="Center"
                                    ItemDisplayBinding="{Binding competitionName}" 
                                    SelectedIndex="{Binding competitionTypeId}" 
                                    SelectedIndexChanged="CustomPicker_SelectedIndexChanged"
                                    FontSize="{StaticResource FontSize18}"
                                    BorderColor="{StaticResource TextGrayColor}"
                                    TitleColor="{StaticResource TextGrayColor}"
                                    TextColor="{StaticResource TextGrayColor}"
                                    Style="{StaticResource RectangleShapeEntryStyle}"/>
                        <Label Text="Rules"
                               Style="{StaticResource HeadingsLabel}"
                               FontSize="{StaticResource FontSize18}"/>
                        <StackLayout>
                            <plugins:PancakeView BackgroundColor="{StaticResource WhiteColor}"
                                         BorderColor="{StaticResource BorderColor}"
                                         CornerRadius="10"
                                         HasShadow="True"
                                         Margin="10,5,10,0"
                                        >
                            <controls:HorizontalList ListOrientation="Vertical"
                                                 HeightRequest="200"
                                                 Padding="0"
                                                 Margin="0"
                                                 BackgroundColor="Transparent"
                                                 ItemsSource="{Binding RulesItems}">
                                <controls:HorizontalList.ItemTemplate>
                                    <DataTemplate>

                                        <StackLayout Orientation="Horizontal"
                                                     Margin="10,10,10,5"
                                                     Padding="0"
                                                     Spacing="0">

                                            <CheckBox Color="{StaticResource TextGrayColor}"
                                                  Margin="20,0"
                                                  CheckedChanged="CheckBox_CheckedChanged"/>
                                            <Label Text="{Binding ruleName}"
                                               FontSize="Small"
                                               TextColor="{StaticResource TextGrayColor}"
                                               Margin="0,0"/>
                                        </StackLayout>
                                    </DataTemplate>
                                </controls:HorizontalList.ItemTemplate>
                            </controls:HorizontalList>
                        </plugins:PancakeView>
                    </StackLayout>

                    <!--<Label Text="Match Location"
                               Style="{StaticResource HeadingsLabel}"
                               FontSize="{StaticResource FontSize18}"/>

                        <controls:CustomEntry Text="{Binding MatchLocation,Mode=TwoWay}"
                                              Style="{StaticResource RectangleShapeEntryStyle}"
                                              Margin="0,5,0,0"
                                              IsCurvedCornersEnabled="True"
                                              FontSize="{StaticResource FontSize18}"/>-->

                        <Label Text="Context Settings"
                               Style="{StaticResource HeadingsLabel}"
                               FontSize="{StaticResource FontSize18}"/>

                        <controls:CustomEntry Text="{Binding ContextSettings ,Mode=TwoWay}"
                                              Style="{StaticResource RectangleShapeEntryStyle}"
                                              Margin="0,5,0,0"
                                              IsCurvedCornersEnabled="True"
                                              FontSize="{StaticResource FontSize18}"/>
                   
                    </StackLayout>
                </ScrollView>
            </StackLayout>

