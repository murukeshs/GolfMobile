<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:Golf.Controls"
             xmlns:plugins="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
             x:Class="Golf.Views.MatchDetailsView.MatchDetailsPage"
             BackgroundColor="{StaticResource AppBackgroundColor}"
             Title="Match Details"
             xmlns:viewModels="clr-namespace:Golf.ViewModel.Match"
             xmlns:Converters="clr-namespace:Golf.Converters">

    <ContentPage.BindingContext>
        <viewModels:MatchDetailsPageViewModel/>
    </ContentPage.BindingContext>

    <ContentPage.Resources>
        <ResourceDictionary>

            <Converters:PaymentImageConverter x:Key="PaymentConverter" />
            <Converters:LinkApprovedImageConverter x:Key="LinkApprovedConverter" />

            <Style x:Key="HeadingsLabel" TargetType="Label">
                <Setter Property="HorizontalOptions" Value="FillAndExpand"/>
                <Setter Property="Margin" Value="0,5,0,0"/>
                <Setter Property="TextColor" Value="{StaticResource TextGrayColor}"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <StackLayout HorizontalOptions="FillAndExpand"
                     VerticalOptions="FillAndExpand">
            <Grid Margin="10"
                  HorizontalOptions="FillAndExpand"
                  VerticalOptions="StartAndExpand">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5.0*"/>
                    <ColumnDefinition Width="5.0*"/>
                </Grid.ColumnDefinitions>

                <controls:RoundedButton Margin="0"
                                        Text="Match Details"
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        FontSize="Medium"
                                        HeightRequest="45"
                                        Command="{Binding MatchDetailsCommand}"/>

                <!--<controls:RoundedButton Margin="10,0"
                                        Command="{Binding PlayersCommand}"
                                        Text="Players"
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        FontSize="Medium"
                                        HeightRequest="45"
                                        BackgroundColor="{StaticResource WhiteColor}"
                                        BorderColor="{StaticResource LightGreenColor}"
                                        TextColor="{StaticResource LightGreenColor}"/>-->

                <controls:RoundedButton Margin="10,0"
                                        Text="Teams"
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        FontSize="Medium"
                                        HeightRequest="45"
                                        Command="{Binding TeamCommand}"
                                        BackgroundColor="{StaticResource WhiteColor}"
                                        BorderColor="{StaticResource LightGreenColor}"
                                        TextColor="{StaticResource LightGreenColor}"/>
            </Grid>

            <BoxView HeightRequest="1"
                     HorizontalOptions="FillAndExpand"
                     Margin="20,0,20,0"
                     Color="{StaticResource LightGreenColor}"/>

            <StackLayout x:Name="MatchDetailsStackLayout"
                         Margin="20,10,20,0"
                         IsVisible="{Binding IsVisibleMatchDetails}"
                         HorizontalOptions="FillAndExpand"
                         VerticalOptions="CenterAndExpand">
                <ScrollView>
                    <StackLayout>
                        <Label Text="Match Name"
                               Style="{StaticResource HeadingsLabel}"
                               FontSize="{StaticResource FontSize18}"/>

                        <controls:CustomEntry Text="{Binding MatchName}"
                                              Style="{StaticResource RectangleShapeEntryStyle}"
                                              FontSize="{StaticResource FontSize18}"
                                              Margin="0,5,0,0"/>

                        <Label Text="Match Code"
                               Style="{StaticResource HeadingsLabel}"
                               FontSize="{StaticResource FontSize18}"/>

                        <controls:CustomEntry Text="{Binding MatchCode}"
                                              Style="{StaticResource RectangleShapeEntryStyle}"
                                              Margin="0,5,0,0"
                                              FontSize="{StaticResource FontSize18}"/>

                        <Label Text="Competition Type"
                               Style="{StaticResource HeadingsLabel}"
                               FontSize="{StaticResource FontSize18}"/>

                        <controls:CustomEntry Text="{Binding CompetitionType}"
                                              Style="{StaticResource RectangleShapeEntryStyle}"
                                              BackgroundColor="LightGray"
                                              Margin="0,5,0,0"
                                              IsEnabled="False"
                                              IsCurvedCornersEnabled="True"
                                              FontSize="{StaticResource FontSize18}"/>

                        <Label Text="Type of Game"
                               Style="{StaticResource HeadingsLabel}"
                               FontSize="{StaticResource FontSize18}"/>

                        <controls:CustomEntry Text="{Binding TypeofGame}"
                                  Style="{StaticResource RectangleShapeEntryStyle}"
                                  BackgroundColor="LightGray"
                                  Margin="0,5,0,0"
                                  IsEnabled="False"
                                  IsCurvedCornersEnabled="True"
                                               FontSize="{StaticResource FontSize18}"/>

                        <Label Text="Match Location"
                               Style="{StaticResource HeadingsLabel}"
                               FontSize="{StaticResource FontSize18}"/>

                        <controls:CustomEntry Text="{Binding MatchLocation}"
                                              Style="{StaticResource RectangleShapeEntryStyle}"
                                              BackgroundColor="LightGray"
                                              Margin="0,5,0,0"
                                              IsEnabled="False"
                                              IsCurvedCornersEnabled="True"
                                              FontSize="{StaticResource FontSize18}"/>

                        <Label Text="Context Settings"
                               Style="{StaticResource HeadingsLabel}"
                               FontSize="{StaticResource FontSize18}"/>

                        <controls:CustomEntry Text="{Binding ContextSettings}"
                                              Style="{StaticResource RectangleShapeEntryStyle}"
                                              BackgroundColor="LightGray"
                                              Margin="0,5,0,0"
                                              IsEnabled="False"
                                              IsCurvedCornersEnabled="True"
                                              FontSize="{StaticResource FontSize18}"/>
                    </StackLayout>
                </ScrollView>
            </StackLayout>

